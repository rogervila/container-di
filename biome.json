{
    "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
    "vcs": {
        "enabled": true,
        "clientKind": "git",
        "useIgnoreFile": true,
        "defaultBranch": "main"
    },
    "files": {
        "ignoreUnknown": false,
        "ignore": [
            "**/.git/**",
            "**/.DS_Store/**",
            "**/node_modules/**",
            "**/package-lock.json",
            "**/dist/**",
            "**/.pnpm-store/**"
        ]
    },
    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "indentWidth": 4,
        "lineWidth": 120
    },
    "organizeImports": {
        "enabled": true
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "style": {
                "useImportType": "off",
                "noInferrableTypes": "off",
                "noNonNullAssertion": "off",
                "useNodejsImportProtocol": "off"
            },
            "suspicious": {
                "noExplicitAny": "off"
            },
            "complexity": {
                "useLiteralKeys": "off",
                "noForEach": "off",
                "noBannedTypes": "off"
            },
            "correctness": {
                "noUnusedImports": "warn"
            }
        }
    },
    "javascript": {
        "formatter": {
            "quoteStyle": "single"
        }
    }
}
